# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=0
ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app

# Database Configuration (Railway will auto-populate these)
POSTGRES_DB=enoki
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Use SQLite for local development (set to 1) or Postgres (set to 0)
USE_SQLITE=0

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Google OAuth2 Configuration (Optional)
GOOGLE_OAUTH2_KEY=your-google-client-id
GOOGLE_OAUTH2_SECRET=your-google-client-secret

# Django Superuser (Optional - for creating admin user)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# Port (Railway sets this automatically)
PORT=8000
